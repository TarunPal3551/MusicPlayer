<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/songcover"
        android:layout_width="86dp"
        android:layout_height="87dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp" />

    <TextView
        android:id="@+id/songName"
        android:layout_width="226dp"
        android:layout_height="41dp"
        android:layout_alignLeft="@+id/artistname"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/artistname"
        android:layout_marginTop="5dp"
        android:text="Song Name"
        android:textColor="@android:color/holo_blue_bright" />

    <TextView
        android:id="@+id/artistname"
        android:layout_width="134dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:text="Artist Name"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/songduration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/artistname"
        android:layout_marginEnd="54dp"
        android:text="Time"
        android:textColor="@android:color/black"
        android:layout_alignParentRight="true"
        android:layout_marginRight="54dp" />

    <TextView
        android:id="@+id/allsongsalbumname"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_alignLeft="@+id/songName"
        android:layout_alignStart="@+id/songName"
        android:layout_below="@+id/artistname"
        android:layout_marginTop="5dp"
        android:text="Album Name"
        android:textColor="@android:color/black" />
</RelativeLayout>